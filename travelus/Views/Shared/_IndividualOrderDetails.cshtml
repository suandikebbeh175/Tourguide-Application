@model travelus.Models.ViewModels.OrderDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form method="post">
    <div class="container row border ml-1 backgroundWhiteBorder10Padding" style="width:100%">
        <div class="col-lg-8 col-12" style="border-right:1px solid #bbb9b9">
            <br />
            <input type="hidden" asp-for="OrderHeader.Id" />

            <div class="form-group row">
                <div class="col-3">
                    <label>Name</label>
                </div>
                <div class="col-9">
                    <input asp-for="OrderHeader.CheckinName" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.ApplicationUser.Email">Email</label>
                </div>
                <div class="col-9">
                    <input asp-for="OrderHeader.ApplicationUser.Email" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.ApplicationUser.PhoneNumber">Phone Number</label>
                </div>
                <div class="col-9">
                    <input asp-for="OrderHeader.ApplicationUser.PhoneNumber" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.OrderTotal">Total</label>
                </div>
                <div class="col-9">
                    <input asp-for="OrderHeader.OrderTotal" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OrderHeader.OrderDate">Booking Date</label>
                </div>
                <div class="col-9">
                    <input value="@Model.OrderHeader.CheckinTime.ToShortDateString() @Model.OrderHeader.CheckinTime.ToShortTimeString()" disabled class="form-control" />
                </div>
            </div>
        </div>


        <div class="col-lg-4 col-12">
            <h4 class="d-flex justify-content-between align-content-center mb-3">
                <span class="text-muted">Order ID: </span>
                <span class="badge badge-secondary badge-pill">@Model.OrderHeader.Id</span> 
            </h4>
            <ul class="list-group mb-3">
                @{var total = 0.0;}
                @foreach(var details in Model.OrderDetails)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <h6 class="my-0">@details.Name</h6>
                            <small class="text-muted">Quantity : @details.People</small>
                        </div>
                        <span class="text-muted">@(details.Price * details.People)</span>
                        @{ total += (details.Price * details.People);}
                    </li>
                            }
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="text-info">Total(GBP)</span>
                    <strong class="text-info">£@Model.OrderHeader.OrderTotal</strong>
                </li>
            </ul>

            <button type="submit" disabled class="btn btn-info form-control">@Model.OrderHeader.Status</button>
        </div>
    </div>
</form>
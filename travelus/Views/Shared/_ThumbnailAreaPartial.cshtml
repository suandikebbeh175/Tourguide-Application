@model IEnumerable<TourItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if(Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) tour-destination">
        <div class="row">
            <h3 class="text-success" style="font-family:Impact"> @Model.FirstOrDefault().Category.Name </h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px;margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:25px;color:blue;font-family:Impact">@item.Name</label>
                                @if (item.Season == "1")
                                {
                                    <img srcset="~/images/winter.png" title="Winter" />
                                }
                                @if (item.Season == "2")
                                {
                                    <img srcset="~/images/spring.png" title="Spring" />
                                }
                                @if (item.Season == "3")
                                {
                                    <img srcset="~/images/summer.png" title="Summer" />
                                }
                                @if (item.Season == "4")
                                {
                                    <img srcset="~/images/autumn.png" title="Autumn" />
                                }
                            </div>
                            <div class="col-4 text-right"style="color:brown;font-family:Impact">
                                <h4>$@item.Price</h4>
                            </div>
                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }

<div class="p-4"></div>

    </div>
}